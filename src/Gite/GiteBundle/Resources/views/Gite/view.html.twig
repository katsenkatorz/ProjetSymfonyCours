{% extends "HomeBundle::Main/layout.html.twig" %}
{% block home_body %}
<div class="row">
  <div class="col-md-8">
    <p>{{ gite.id|raw }}</p>
    <p>{{ gite.name|raw }}</p>
    <p>{{ gite.options }}</p>
    {{ gite.content|raw }}
    <br/>
    <hr/>
  </div>
  <div class="col-md-2">
    <label class="control-label">Date d'arrivée</label>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-calendar"></i>
      </span>
      <input class="datepicker form-control" data-date-format="DD dd MM yyyy" placeholder="Date" type="text">
    </div>
  </div>
  <div class="col-md-2">
    <label class="control-label">Date de départ</label>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-calendar"></i>
      </span>
      <input class="datepicker form-control" data-date-format="DD dd MM yyyy" placeholder="Date" type="text">
    </div>
  </div>
</div>
{% endblock %}
